<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CloneX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.CloneX" parent="Base.Theme.CloneX" >
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/netflix_black</item>
    </style>

    <style name="WhiteSemiBoldTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="FocusableTextInputLayoutStyle">
        <item name="boxCollapsedPaddingTop">4dp</item>
        <item name="boxBackgroundColor">@color/midnight_gray</item>
        <item name="android:textColorHint">@color/lightest_gray</item>          <!-- resting -->
        <item name="hintTextColor">@color/lightest_gray</item>                <!-- focused -->
    </style>


    <style name="FocusableEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">50</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.App.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="itemIconTint">@drawable/selector_nav_colors</item>
        <item name="itemTextColor">@drawable/selector_nav_colors</item>
        <item name="itemActiveIndicatorStyle">@style/App.Indicator</item>
    </style>

    <style name="App.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#1A4285F4</item>
    </style>
</resources>