<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.tugbaolcer.clonex.ui.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_navy"
        tools:context=".ui.login.LoginActivity">

        <com.tugbaolcer.clonex.utils.AppTopBar
            android:id="@+id/layout_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentInsetStart="0dp"
            android:fitsSystemWindows="true"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />


        <com.tugbaolcer.clonex.utils.CustomEditTextView
            android:id="@+id/tv_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:til_hint="@string/Input.Label.Email"
            app:til_show_password="false"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.tugbaolcer.clonex.utils.CustomEditTextView
            android:id="@+id/tv_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:til_hint="@string/Input.Label.Password"
            app:til_show_password="true"
            app:layout_constraintTop_toBottomOf="@id/tv_user_email"
            app:layout_constraintStart_toStartOf="@id/tv_user_email"
            app:layout_constraintEnd_toEndOf="@id/tv_user_email"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/Button.Label.SignUp"
            android:background="@color/dark_cherry"
            android:textColor="@color/lightest_gray"
            android:onClick="@{() -> vm.onLoginClicked()}"
            app:layout_constraintTop_toBottomOf="@id/tv_password"
            app:layout_constraintStart_toStartOf="@id/tv_password"
            app:layout_constraintEnd_toEndOf="@id/tv_password"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_or"
            style="@style/WhiteSemiBoldTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/Common.Label.Or"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            app:layout_constraintStart_toStartOf="@id/btn_login"
            app:layout_constraintEnd_toEndOf="@id/btn_login"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/Button.Label.SignUpUseCode"
            android:background="@color/midnight_gray"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_or"
            app:layout_constraintStart_toStartOf="@id/btn_login"
            app:layout_constraintEnd_toEndOf="@id/btn_login"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_forget_password"
            style="@style/WhiteSemiBoldTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/Common.Label.ForgetPassword"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/btn_login_code"
            app:layout_constraintStart_toStartOf="@id/btn_login_code"
            app:layout_constraintEnd_toEndOf="@id/btn_login_code"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_info_text"
            style="@style/WhiteSemiBoldTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="12dp"
            android:text="@string/Common.Label.LoginInfoText"
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_forget_password"
            app:layout_constraintStart_toStartOf="@id/btn_login_code"
            app:layout_constraintEnd_toEndOf="@id/btn_login_code"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>