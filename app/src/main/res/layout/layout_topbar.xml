<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark_navy">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_onboarding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:constraint_referenced_ids="iv_onboarding, dropdown_menu, btn_sign_up" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_onboarding"
            android:layout_width="130dp"
            android:layout_height="0dp"
            android:src="@drawable/netflix_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/dropdown_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert"
            android:background="@color/dark_navy"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@id/btn_sign_up"
            app:layout_constraintBottom_toBottomOf="@id/btn_sign_up"
            app:layout_constraintEnd_toStartOf="@id/btn_sign_up"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sign_up"
            style="@style/WhiteSemiBoldTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/night_gray"
            android:text="@string/Button.Label.SignUp"
            app:cornerRadius="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="button_left, iv_center_logo, tv_help" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_left"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/ic_back_white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_center_logo"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:src="@drawable/netflix_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_help"
            style="@style/WhiteSemiBoldTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/Menu.Label.Help"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>